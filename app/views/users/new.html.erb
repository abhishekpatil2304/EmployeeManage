<%= form_for(@user) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :role_id %>
  <%= f.collection_select :role_id, Role.all, :id, :name %>

  <%= f.submit "Create User" %>
<% end %>
